v: 0
name: secure-port-scanner
services:
  - name: web
    src: .
    engine: python3.11
    primary: true
    # Deta builds from the repo; install deps then run gunicorn binding to $PORT
    run: |
      pip install --upgrade pip
      pip install -r requirements.txt
      gunicorn -w 2 -k gthread -b 0.0.0.0:${PORT:-8000} app:app
    http_port: 8000
